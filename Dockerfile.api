# Dockerfile for Express.js API (Development)
FROM node:22-alpine

WORKDIR /app

# Install system dependencies (AWS CLI and jq)
RUN apk add --no-cache \
    aws-cli \
    jq \
    curl

# Copy package files
COPY localstack-api/package*.json ./

# Install dependencies (including dev dependencies for nodemon)
RUN npm install

# Copy source code
COPY localstack-api/ ./

EXPOSE 3031

ENV PORT=3031

CMD ["npm", "run", "dev"] 